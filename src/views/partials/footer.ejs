<style>
    /* ============================================
       FOOTER STYLES
       ============================================ */

    .modern-footer {
        position: relative;
        background: linear-gradient(135deg, #023859 0%, #26658C 100%);
        color: #fff;
        padding: 50px 0 20px;
        margin-top: 80px;
        overflow: hidden;
    }

    /* Animated Wave Background */
    .footer-waves {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: 0;
        opacity: 0.3;
    }

    .wave {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 200%;
        height: 100px;
        background: linear-gradient(90deg, transparent, #54ACBF, transparent);
        animation: waveMove 8s linear infinite;
    }

    .wave:nth-child(2) {
        bottom: 10px;
        animation: waveMove 10s linear infinite reverse;
        opacity: 0.5;
        background: linear-gradient(90deg, transparent, #26658C, transparent);
    }

    .wave:nth-child(3) {
        bottom: 20px;
        animation: waveMove 12s linear infinite;
        opacity: 0.3;
        background: linear-gradient(90deg, transparent, #54ACBF, transparent);
    }

    @keyframes waveMove {
        0% {
            transform: translateX(0);
        }

        100% {
            transform: translateX(-50%);
        }
    }

    /* Floating Particles */
    .footer-particle {
        position: absolute;
        width: 4px;
        height: 4px;
        background: #54ACBF;
        border-radius: 50%;
        opacity: 0.6;
        animation: particleFloat 6s ease-in-out infinite;
    }

    .footer-particle:nth-child(1) {
        left: 10%;
        top: 20%;
        animation-delay: 0s;
    }

    .footer-particle:nth-child(2) {
        left: 30%;
        top: 40%;
        animation-delay: 1s;
    }

    .footer-particle:nth-child(3) {
        left: 50%;
        top: 60%;
        animation-delay: 2s;
    }

    .footer-particle:nth-child(4) {
        left: 70%;
        top: 30%;
        animation-delay: 1.5s;
    }

    .footer-particle:nth-child(5) {
        left: 90%;
        top: 50%;
        animation-delay: 0.5s;
    }

    @keyframes particleFloat {

        0%,
        100% {
            transform: translateY(0) scale(1);
            opacity: 0.6;
        }

        50% {
            transform: translateY(-30px) scale(1.5);
            opacity: 1;
        }
    }

    /* Footer Content */
