    }

    .social-link:hover {
        background: linear-gradient(135deg, #54ACBF 0%, #26658C 100%);
        color: #fff;
        transform: translateY(-8px) rotate(360deg);
        box-shadow: 0 10px 30px rgba(84, 172, 191, 0.5);
        border-color: #54ACBF;
    }

    /* Quick Links */
    .footer-links {
        display: flex;
        justify-content: center;
        gap: 30px;
        flex-wrap: wrap;
        margin-bottom: 25px;
    }

    .footer-link {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        font-size: 0.95rem;
        font-weight: 500;
        transition: all 0.3s ease;
        position: relative;
        padding-bottom: 5px;
    }

    .footer-link::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 0;
        height: 2px;
        background: #54ACBF;
        transition: width 0.3s ease;
    }

    .footer-link:hover {
        color: #54ACBF;
        transform: translateY(-2px);
    }

    .footer-link:hover::after {
        width: 100%;
    }

    /* Divider */
    .footer-divider {
        width: 80%;
        max-width: 600px;
        height: 2px;
        background: linear-gradient(90deg, transparent, #54ACBF, transparent);
        margin: 30px auto;
        animation: glow 3s ease-in-out infinite;
    }

    @keyframes glow {

        0%,
        100% {
            opacity: 0.3;
            box-shadow: 0 0 10px #54ACBF;
        }

        50% {
            opacity: 1;
            box-shadow: 0 0 20px #54ACBF;
        }
    }

    /* Copyright */
    .footer-copyright {
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.9rem;
        margin: 0;
        position: relative;
        z-index: 1;
    }

    .footer-copyright .heart {
        color: #ff6b6b;
        animation: heartbeat 1.5s ease-in-out infinite;
        display: inline-block;
    }

    @keyframes heartbeat {

        0%,
        100% {
            transform: scale(1);
        }

        25% {
