            /* Background Animations */
            #particles-js {
                position: fixed;
                width: 100%;
                height: 100%;
                top: 0;
                left: 0;
                z-index: -1;
                background: linear-gradient(135deg, #26658C 0%, #023859 100%);
            }

            .gradient-orb {
                position: fixed;
                border-radius: 50%;
                filter: blur(100px);
                opacity: 0.2;
                pointer-events: none;
                z-index: -1;
            }

            .gradient-orb-1 {
                width: 400px;
                height: 400px;
                background: #54ACBF;
                top: 10%;
                left: 10%;
                animation: float1 20s ease-in-out infinite;
            }

            .gradient-orb-2 {
                width: 350px;
                height: 350px;
                background: #26658C;
                top: 50%;
                right: 10%;
                animation: float2 25s ease-in-out infinite;
            }

            .gradient-orb-3 {
                width: 450px;
                height: 450px;
                background: #023859;
                bottom: 10%;
                left: 40%;
                animation: float3 22s ease-in-out infinite;
            }

            @keyframes float1 {

                0%,
                100% {
                    transform: translate(0, 0);
                }

                50% {
                    transform: translate(50px, -50px);
                }
            }

            @keyframes float2 {

                0%,
                100% {
                    transform: translate(0, 0);
                }

                50% {
                    transform: translate(-40px, 40px);
                }
            }

            @keyframes float3 {

                0%,
                100% {
                    transform: translate(0, 0);
                }

                50% {
                    transform: translate(30px, -30px);
                }
            }

            /* Main Content */
            .content-wrapper {
                position: relative;
                padding: 60px 0 80px;
            }

            /* Glass Cards */
            .glass-card {
                background: rgba(255, 255, 255, 0.95);
                border-radius: 20px;
                padding: 40px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
                transition: all 0.6s ease;
                margin-bottom: 40px;
            }

            .glass-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 50px rgba(38, 101, 140, 0.25);
            }

            .glass-card .icon {
                font-size: 3rem;
                margin-bottom: 20px;
                transition: transform 0.6s ease;
            }

            .glass-card:hover .icon {
                transform: scale(1.15) rotate(5deg);
            }

            /* Typography */
            h1,
            h2,
            h3 {
                color: #023859;
                font-weight: 800;
            }

            .text-accent {
                color: #54ACBF;
            }

            /* Images */
            .img-fluid {
                transition: all 0.8s ease;
            }

            .img-fluid:hover {
                transform: scale(1.05) translateY(-10px);
                filter: drop-shadow(0 15px 30px rgba(38, 101, 140, 0.3));
            }

            /* Circular Profile Image with Smooth Hover */
            .profile-image {
                width: 420px;
                height: 420px;
                border-radius: 50%;
                object-fit: cover;
                border: 5px solid rgba(84, 172, 191, 0.3);
                box-shadow: 0 8px 25px rgba(38, 101, 140, 0.25);
                transition: all 0.6s ease;
            }

            .profile-image:hover {
                transform: scale(1.08);
                border-color: rgba(84, 172, 191, 0.8);
                box-shadow: 0 15px 40px rgba(38, 101, 140, 0.4);
            }

            @media (max-width: 768px) {
                .profile-image {
                    width: 250px;
                    height: 250px;
                }
            }


            /* Buttons */
            .btn-custom {
                background: linear-gradient(135deg, #54ACBF 0%, #26658C 100%);
                color: white;
                border: none;
                padding: 12px 35px;
                border-radius: 50px;
                font-weight: 600;
                transition: all 0.5s ease;
                box-shadow: 0 5px 20px rgba(84, 172, 191, 0.3);
                text-decoration: none;
                display: inline-block;
            }

            .btn-custom:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 30px rgba(84, 172, 191, 0.5);
                color: white;
            }

            /* Section Spacing */
            .section {
                margin-bottom: 80px;
            }

            /* Stats Cards */
            .stat-card {
                text-align: center;
                padding: 35px 25px;
                background: white;
                border-radius: 20px;
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
                transition: all 0.6s ease;
                height: 100%;
            }

            .stat-card:hover {
                transform: translateY(-12px) scale(1.03);
                box-shadow: 0 20px 45px rgba(38, 101, 140, 0.25);
            }

            .stat-card .icon {
                font-size: 3rem;
                margin-bottom: 20px;
                transition: transform 0.6s ease;
            }

            .stat-card:hover .icon {
                transform: scale(1.15) rotate(5deg);
            }

            .stat-card h4 {
                color: #023859;
                font-size: 1.4rem;
                margin-bottom: 15px;
                font-weight: 700;
            }

            .stat-card p {
                color: #666;
                font-size: 0.95rem;
                line-height: 1.6;
                margin-bottom: 0;
            }

            /* Contact Links */
            .contact-link {
                color: #26658C;
                font-weight: 600;
                text-decoration: none;
                transition: all 0.4s ease;
                position: relative;
            }

            .contact-link:hover {
                color: #54ACBF;
                transform: translateX(5px);
                display: inline-block;
            }

            @media (max-width: 768px) {
                .gradient-orb {
                    display: none;
                }

                .glass-card {
                    padding: 25px;
                }
            }
