        <style>
            /* Same Background as Home Page */
            #particles-js {
                position: fixed;
                width: 100%;
                height: 100%;
                top: 0;
                left: 0;
                z-index: -1;
                background: linear-gradient(135deg, #26658C 0%, #023859 100%);
            }

            /* Floating Gradient Orbs */
            .gradient-orb {
                position: fixed;
                border-radius: 50%;
                filter: blur(100px);
                opacity: 0.2;
                pointer-events: none;
                z-index: -1;
            }

            .gradient-orb-1 {
                width: 400px;
                height: 400px;
                background: #54ACBF;
                top: 10%;
                left: 10%;
                animation: float1 15s ease-in-out infinite;
            }

            .gradient-orb-2 {
                width: 350px;
                height: 350px;
                background: #26658C;
                top: 50%;
                right: 10%;
                animation: float2 18s ease-in-out infinite;
            }

            .gradient-orb-3 {
                width: 450px;
                height: 450px;
                background: #023859;
                bottom: 10%;
                left: 40%;
                animation: float3 20s ease-in-out infinite;
            }

            @keyframes float1 {

                0%,
                100% {
                    transform: translate(0, 0);
                }

                50% {
                    transform: translate(50px, -50px);
                }
            }

            @keyframes float2 {

                0%,
                100% {
                    transform: translate(0, 0);
                }

                50% {
                    transform: translate(-40px, 40px);
                }
            }

            @keyframes float3 {

                0%,
                100% {
                    transform: translate(0, 0);
                }

                50% {
                    transform: translate(30px, -30px);
                }
            }

            /* Skills Section */
            .skills-section {
                position: relative;
                min-height: 100vh;
                padding: 60px 0 100px;
            }

            .skills-title {
                color: white;
                font-size: 2.5rem;
                font-weight: 900;
                text-align: center;
                margin-bottom: 60px;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            }

            /* Skill Cards */
            .skill-card {
                background: rgba(255, 255, 255, 0.95);
                border: none;
                border-radius: 20px;
                transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
                cursor: pointer;
                overflow: hidden;
            }

            .skill-card:hover {
                transform: translateY(-15px) scale(1.05);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
                background: rgba(255, 255, 255, 1);
            }

            .skill-card-body {
                padding: 30px 20px;
            }

            /* Icon Animation */
            .skill-icon {
                width: 70px;
                height: 70px;
                margin-bottom: 20px;
                transition: all 0.4s ease;
                filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
            }

            .skill-card:hover .skill-icon {
                transform: rotateY(360deg) scale(1.1);
                filter: drop-shadow(0 8px 16px rgba(38, 101, 140, 0.4));
            }

            .skill-card-title {
                font-size: 1.3rem;
                font-weight: 700;
                color: #023859;
                margin-bottom: 12px;
            }

            .skill-card-text {
                color: #555;
                font-size: 0.95rem;
                line-height: 1.6;
            }

            /* Staggered Animation on Load */
            .skill-card {
                opacity: 0;
                animation: fadeInUp 0.6s ease forwards;
            }

            .skill-card:nth-child(1) {
                animation-delay: 0.1s;
            }

            .skill-card:nth-child(2) {
                animation-delay: 0.2s;
            }

            .skill-card:nth-child(3) {
                animation-delay: 0.3s;
            }

            .skill-card:nth-child(4) {
                animation-delay: 0.4s;
            }

            .skill-card:nth-child(5) {
                animation-delay: 0.5s;
            }

            .skill-card:nth-child(6) {
                animation-delay: 0.6s;
            }

            .skill-card:nth-child(7) {
                animation-delay: 0.7s;
            }

            .skill-card:nth-child(8) {
                animation-delay: 0.8s;
            }

            .skill-card:nth-child(9) {
                animation-delay: 0.9s;
            }

            .skill-card:nth-child(10) {
                animation-delay: 1s;
            }

            @keyframes fadeInUp {
                from {
                    opacity: 0;
                    transform: translateY(30px);
                }

                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            /* Responsive */
            @media (max-width: 768px) {
                .gradient-orb {
                    display: none;
                }

                .skills-title {
                    font-size: 2rem;
                }

                .skill-icon {
                    width: 60px;
                    height: 60px;
                }
            }
        </style>

