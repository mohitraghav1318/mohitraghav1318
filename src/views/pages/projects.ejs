        <style>
            /* Background Animations */
            #particles-js {
                position: fixed;
                width: 100%;
                height: 100%;
                top: 0;
                left: 0;
                z-index: -1;
                background: linear-gradient(135deg, #26658C 0%, #023859 100%);
            }

            .content-wrapper {
                position: relative;
                min-height: 100vh;
                padding: 40px 0;
            }

            /* Floating Gradient Orbs */
            .gradient-orb {
                position: fixed;
                border-radius: 50%;
                filter: blur(100px);
                opacity: 0.2;
                pointer-events: none;
                z-index: -1;
            }

            .gradient-orb-1 {
                width: 400px;
                height: 400px;
                background: #54ACBF;
                top: 10%;
                left: 10%;
                animation: float1 15s ease-in-out infinite;
            }

            .gradient-orb-2 {
                width: 350px;
                height: 350px;
                background: #26658C;
                top: 50%;
                right: 10%;
                animation: float2 18s ease-in-out infinite;
            }

            .gradient-orb-3 {
                width: 450px;
                height: 450px;
                background: #023859;
                bottom: 10%;
                left: 40%;
                animation: float3 20s ease-in-out infinite;
            }

            @keyframes float1 {

                0%,
                100% {
                    transform: translate(0, 0);
                }

                50% {
                    transform: translate(50px, -50px);
                }
            }

            @keyframes float2 {

                0%,
                100% {
                    transform: translate(0, 0);
                }

                50% {
                    transform: translate(-40px, 40px);
                }
            }

            @keyframes float3 {

                0%,
                100% {
                    transform: translate(0, 0);
                }

                50% {
                    transform: translate(30px, -30px);
                }
            }

            /* Projects Section */
            .section-spacing {
                padding: 60px 0;
            }

            #projects h2 {
                color: white;
                font-weight: 800;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            }

            /* Card Styles */
            .card {
                transition: transform 0.3s ease, box-shadow 0.3s ease;
                border: none;
            }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2) !important;
            }

            .card-img-top {
                height: 200px;
                object-fit: cover;
            }

            .btn-dark {
                background: #26658C;
                border: none;
                transition: all 0.3s ease;
            }

            .btn-dark:hover {
                background: #023859;
                transform: translateX(5px);
            }

            @media (max-width: 768px) {
                .gradient-orb {
                    display: none;
                }
            }
        </style>

